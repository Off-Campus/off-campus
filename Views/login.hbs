<form action="/login" method="post">
  <div>
    <h1 class="weight-900">Login</h1>
    <div class="form-group">
      <label class="weight-700">Username</label>
      <input
        class="weight-600"
        type="text"
        name="username"
        id="username"
        placeholder="Enter your username"
        required
      />
    </div>
    <div class="form-group">
      <label class="weight-700">Password</label>
      <input
        class="weight-600"
        type="password"
        name="password"
        id="password"
        placeholder="Enter your password"
        required
      />
    </div>
    <div>
      <input class="weight-700" type="submit" value="Login" />
      <a class="weight-700" href="/register">Register</a>
    </div>
  </div>
</form>