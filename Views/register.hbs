<form action="/login" method="post">
  <div>
    <h1 class="weight-900">Register</h1>
    <div class="form-group">
      <label class="weight-700">Email</label>
      <input
        class="weight-600"
        type="email"
        name="email"
        id="email"
        placeholder="Enter your email"
        required
      />
    </div>
    <div class="form-group">
      <label class="weight-700">Username</label>
      <input
        class="weight-600"
        type="text"
        name="username"
        id="username"
        placeholder="Enter your username"
        required
      />
    </div>
    <div class="form-group">
      <label class="weight-700">Password</label>
      <input
        class="weight-600"
        type="password"
        name="password"
        id="password"
        placeholder="Enter your password"
        required
      />
    </div>
    <div class="form-group">
      <label class="weight-700">Confirm Password</label>
      <input
        class="weight-600"
        type="password"
        name="password2"
        id="password2"
        placeholder="Confirm your password"
        required
      />
    </div>
    <div>
      <input style="width: 100%;" class="weight-700" type="submit" value="Register" />
    </div>
  </div>
</form>